<div class="iniciar">
    <h1>¡Hola {{usuario}}!</h1>
    <p>Déjanos tu comentario</p>
    <form>
        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Comentario</label>
            <input type="textarea" class="form-control" id="content" name="content">
        </div>
        <div class="btn-iniciar">
            <button type="submit" class="btn btn-primary">Enviar</button>
            <button class="btn btn-primary"><a href="/admin/login/logout">Cerrar Sesión</a></button>
        </div>
    </form>
    
    <!-- COMENTARIOS -->
    <div class="row">
        <div class="col">
            <table class="table-comentarios">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Usuario</th>
                        <th scope="col" class="text-right"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each comentarios}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{nombre}}</td>
                            <td>{{comentario}}</td>
                            <td class="text-right">
                                <a href="" class="btn"><i>edit</i></a>
                                <a href="/admin/comentarios/eliminar/{{id}}" class="btn"><i>delete</i></a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
    <!-- FIN COMENTARIOS -->

</div>