<div class="iniciar">
    <h1>¡Hola {{usuario}}!</h1>
    <p>Dejanos tu comentario</p>

    <!-- COMENTARIOS -->
    <div class="row">
        <div class="col">
            <table class="table-comentarios">
                <thead>
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col" class="text-right"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each comentarios}}
                        <tr>
                            <th scope="row">{{nombre}}</th>
                            <td>{{comentario}}</td>
                            <td class="text-right">
                                <a href="/admin/comentarios/modificar/{{id}}" class="btn"><i>edit</i></a>
                                <a href="/admin/comentarios/eliminar/{{id}}" class="btn"><i>delete</i></a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>

    </div>
        <div>
            <button type="submit" class="btn btn-primary"><a href="/admin/comentarios/agregar">Añadir</a></button>
            <button class="btn btn-primary"><a href="/admin/login/logout">Cerrar Sesión</a></button>
        </div>
    <!-- FIN COMENTARIOS -->