<div class="container" style="margin: 100px auto">
    <form action="/admin/login" method="post" class="row row-cols-lg-auto g-3 align-items-center">
        <div class="col-12">
            <label
            class="visually-hidden"
            for="inlineFormInputGroupUsername"
            >Usuario</label>
            <div class="input-group">
            <input
                type="text"
                class="form-control"
                placeholder="Usuario"
                name="usuario"
            />
            </div>
        </div>

        <div class="col-12">
            <label
            class="visually-hidden"
            for="inlineFormInputGroupUsername"
            >Contraseña</label>
            <div class="input-group">
            <input
                type="password"
                class="form-control"
                placeholder="Contraseña"
                name="clave"
            />
            </div>
        </div>

        <div class="col-12">
            <div class="form-check">
            <input class="form-check-input" type="checkbox" id="inlineFormCheck" />
            <label class="form-check-label" for="inlineFormCheck">
                Recordarme
            </label>
            </div>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">Aceptar</button>
        </div>
    </form>
    {{#if error}}
        <p>Datos incorrectos</p>
    {{/if}}

</div>